<% include ../../partials/header %>
<% include ../../partials/menu %>
<div class="d-flex" id="wrapper">
    <!-- Sidebar -->
    <% include ../../partials/sidebar %>
    <!-- /#sidebar-wrapper -->
    <div id="page-content-wrapper">
        <div class="container-fluid" style="margin-top: 5px;">
            <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>
        </div>
        <!-- Page Content -->
        <div class="container-fluid"">
        <h1>Edit Member for Project #<%= projectid %> (<%= data.projectname %>)</h1>
        <hr />
        <form action="" method=" post">
            <div class="form-group row">
                <label for="name" class="col-sm-2 col-form-label">Member</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" id="name" placeholder="Name" name="name"
                        value="<%= item.fullname %>" disabled>
                </div>
            </div>
            <div class="form-group row">
                <label for="role" class="col-sm-2 col-form-label">Role</label>
                <div class="col-sm-3">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="role" value="Manager"
                            <%= item.role == 'Manager' ? ' checked': '' %>>
                        <label class="form-check-label" for="manager">
                            Manager
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="role" value="Software Developer"
                            <%= item.role == 'Software Developer' ? ' checked': '' %>>
                        <label class="form-check-label" for="softwareDeveloper">
                            Software Developer
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="role" value="Quality Assurance"
                            <%= item.role == 'Quality Assurance' ? ' checked': '' %>>
                        <label class="form-check-label" for="qualityAssurance">
                            Quality Assurance
                        </label>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary"><i class="fas fa-edit"></i> Update</button>
            <a href="/projects/members/<%= projectid %>"><button type="button" class="btn btn-outline-warning"><i
                        class="fas fa-redo-alt"></i>
                    Cancel</button></a>
            </form>
        </div>
    </div>
</div>
<% include ../../partials/footer %>