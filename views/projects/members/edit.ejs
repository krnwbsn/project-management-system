<% include ../../partials/header %>
<% include ../../partials/menu %>
<div class="d-flex" id="wrapper">
    <!-- Sidebar -->
    <% include ../../partials/sidebar %>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div class="container-fluid" style="margin-top: 20px">
        <h1>Edit Member for Project #1 (Login Session)</h1>
        <hr />
        <form action="/" method="post">
            <div class="form-group row">
                <label for="name" class="col-sm-1 col-form-label">Member</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control" id="name" placeholder="Name" name="name" disabled>
                </div>
            </div>
            <div class="form-group row">
                <label for="member" class="col-sm-1 col-form-label">Role</label>
                <div class="col-sm-2">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Role" value="manager">
                        <label class="form-check-label" for="manager">
                            Manager
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Role" value="softwareDeveloper">
                        <label class="form-check-label" for="softwareDeveloper">
                            Software Developer
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Role" value="qualityAssurance">
                        <label class="form-check-label" for="qualityAssurance">
                            Quality Assurance
                        </label>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary"><i class="fas fa-edit"></i> Update</button>
            <a href="members.html"><button type="button" class="btn btn-outline-warning"><i class="fas fa-redo-alt"></i>
                    Cancel</button></a>
        </form>
    </div>
</div>
<% include ../../partials/footer %>