<% include ../../partials/header %>
<% include ../../partials/menu %>
<div class="d-flex" id="wrapper">
    <% include ../../partials/sidebar %>
    <div id="page-content-wrapper">
        <div class="container-fluid" style="margin-top: 5px;">
            <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>
        </div>
        <div class="container-fluid">
            <h1>Add Member for Project <%= projectid %> (<%= project.projectname %>)</h1>
            <hr />
            <form action="" method="POST">
                <div class="form-group row">
                    <label for="member" class="col-sm-2 col-form-label">Member</label>
                    <div class="col-sm-3">
                        <select id="member" class="form-control" name="fullname">
                            <option disabled selected>Choose the member...</option>
                            <% users.forEach(item => { %>
                            <option value="<%= item.userid %>">
                                <%= item.fullname %>
                            </option>
                            <% }) %>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="member" class="col-sm-2 col-form-label">Position</label>
                    <div class="col-sm-3">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="role" value="Manager">
                            <label class="form-check-label" for="manager">
                                Manager
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="role" value="Software Developer">
                            <label class="form-check-label" for="softwareDeveloper">
                                Software Developer
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="role" value="Quality Assurance">
                            <label class="form-check-label" for="qualityAssurance">
                                Quality Assurance
                            </label>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
                <a href="members/<%= projectid %>"><button type="button" class="btn btn-outline-warning"><i
                            class="fas fa-redo-alt"></i>
                        Cancel</button></a>
            </form>
        </div>
    </div>
    <!-- /#page-content-wrapper -->
</div>
<% include ../../partials/footer %>